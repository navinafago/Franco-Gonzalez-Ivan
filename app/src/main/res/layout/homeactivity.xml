<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/padre">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:id="@+id/hijo1"
                     android:orientation="vertical"
                     android:layout_weight="0.50">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/hijo1.1"
                         android:orientation="vertical">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/txtvw1.1.1"
                             android:text="Material A"
                             android:textAlignment="center"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="5dp"
                             android:padding="5dp"
                             android:textSize="18dp"/>
                         <LinearLayout
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:id="@+id/material1"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="5dp">
                             <RelativeLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent">

                                 <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

                                 <TextView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/blueGrey"
                                     android:layout_weight="0"
                                     android:id="@+id/material1_superior"
                                     />

                                 <TextView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/brown"
                                     android:layout_weight="1"
                                     android:id="@+id/material1_inferior"/>

                                 </LinearLayout>

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="5dp"
                                     android:background="@color/red"
                                     android:layout_marginBottom="95dp"
                                     android:layout_alignParentBottom="true"
                                     android:id="@+id/nvl_max_1"/>
                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="5dp"
                                     android:background="@color/deepOrange"
                                     android:layout_marginBottom="0dp"
                                     android:layout_alignParentBottom="true"
                                     android:id="@+id/nvl_min_1"/>
                             </RelativeLayout>
                         </LinearLayout>
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/hijo1.2"
                         android:orientation="vertical">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/txtvw1.2.1"
                             android:text="Material B"
                             android:textAlignment="center"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="5dp"
                             android:padding="5dp"
                             android:textSize="18dp"/>
                         <LinearLayout
                             android:layout_width="100dp"
                             android:layout_height="100dp"
                             android:orientation="vertical"
                             android:id="@+id/material2"
                             android:layout_gravity="center_horizontal"
                             android:layout_marginTop="5dp">
                             <RelativeLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent">
                                 <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

                                     <TextView
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:background="@color/blueGrey"
                                         android:layout_weight="0"
                                         android:id="@+id/material2_superior"/>
                                     <TextView
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:background="@color/pink"
                                         android:layout_weight="1"
                                         android:id="@+id/material2_inferior"/>

                                 </LinearLayout>

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="5dp"
                                     android:background="@color/red"
                                     android:layout_marginBottom="95dp"
                                     android:id="@+id/nvl_max_2"
                                     android:layout_alignParentBottom="true" />
                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="5dp"
                                     android:background="@color/deepOrange"
                                     android:layout_marginBottom="0dp"
                                     android:layout_alignParentBottom="true"
                                     android:id="@+id/nvl_min_2"/>
                             </RelativeLayout>

                         </LinearLayout>


                     </LinearLayout>

                 </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/hijo_intermedio"
                    android:orientation="vertical"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/empresa"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textSize="22dp"
                        android:textColor="@color/amber"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/produccion"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textSize="16dp"/>

                    <ProgressBar
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        android:layout_gravity="center_horizontal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/progressbar2"
                        android:progress="100"
                        android:layout_marginBottom="20dp"/>
                    <View
                        android:layout_width="60dp"
                        android:layout_height="10dp"
                        android:background="@color/yellow"/>
                    <View
                        android:layout_width="10dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="50dp"
                        android:background="@color/yellow"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inversion"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:id="@+id/invercion"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/hijo2"
                    android:orientation="vertical"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hijo2.1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvw2.1.1"
                            android:text="Mercancia C"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:id="@+id/producto"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/blueGrey"
                                        android:layout_weight="0"
                                        android:id="@+id/producto_superior"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/blue"
                                        android:layout_weight="1"
                                        android:id="@+id/producto_inferior"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@color/red"
                                    android:layout_marginBottom="95dp"
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/nvl_max_3"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:background="@color/deepOrange"
                                    android:layout_marginBottom="0dp"
                                    android:layout_alignParentBottom="true"
                                    android:id="@+id/nvl_min_3"/>
                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hijo2.2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvw2.2.1"
                            android:text="Dinero"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:textSize="18dp"/>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical"
                            android:id="@+id/dinero"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/dinero_superior"
                                android:layout_weight="0"
                                android:background="@color/blueGrey"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/dinero_inferior"
                                android:layout_weight="1"
                                android:background="@color/yellow"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
 <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>

