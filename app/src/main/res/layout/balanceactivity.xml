<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance General"
                    android:textSize="35dp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwActivos"
                            android:text="Activos"
                            android:textSize="35dp"
                            android:layout_weight="1"
                            android:textColor="@color/pink"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwPasivo"
                            android:text="Pasivo"
                            android:textSize="35dp"
                            android:layout_weight="1"
                            android:textColor="@color/brown"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwBancos"
                            android:text="Banco: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwProveedor1"
                            android:text="Proveedor 1: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwAlmacen1"
                            android:text="Almacen 1: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwProveedor2"
                            android:text="Proveedor 2: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwAlmacen2"
                            android:text="Almacen 2: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwCapital"
                            android:text="Capital Social: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwProduccion"
                            android:text="Produccion: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwUtilidad"
                            android:text="Utilidad: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwMercado"
                            android:text="Mercado: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwRelleno"
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwClientes"
                            android:text="Clientes: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/purple"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwRelleno2"
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/amber"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwTotalActivo"
                            android:text="Total Activo: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/red"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtvwTotalPasivo"
                            android:text="Total Pasivo: "
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:textColor="@color/red"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
   <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header_main"
    app:menu="@menu/activity_main_drawer" />
    </android.support.v4.widget.DrawerLayout>