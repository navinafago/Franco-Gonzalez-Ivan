<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvw_explica"
        android:text="@string/explicacion"
        android:textSize="18dp"
        android:textAlignment="center"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/elige_produccion"
        android:textSize="16dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_below="@+id/txtvw_explica"
        android:id="@+id/txtvwextra"/>
    <EditText
        android:id="@+id/edt_producto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_below="@+id/txtvwextra"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_aceptar1"
        android:text="@string/aceptar"
        android:layout_below="@+id/edt_producto"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancelar1"
        android:text="@string/cancelar"
        android:layout_below="@+id/btn_aceptar1"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>